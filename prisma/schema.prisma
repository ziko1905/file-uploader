generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String   @db.VarChar(40)
  lastName  String   @db.VarChar(40)
  email     String   @unique
  password  String
  folders   Folder[]
}

model Folder {
  id              Int      @id @default(autoincrement())
  name            String   @db.VarChar(64)
  creationDate    DateTime @default(now())
  isMain          Boolean  @default(false)
  type            Type     @default(FOLDER)
  // Optional bcs of main folder witch does not have parent folder
  parentFolder    Folder?  @relation("ParentChildrenFolder", fields: [parentFolderId], references: [id])
  parentFolderId  Int?
  childrenFolders Folder[] @relation("ParentChildrenFolder")
  files           File[]
  user            User     @relation(fields: [userId], references: [id])
  userId          Int
}

model File {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(64)
  uploadDate DateTime @default(now())
  extension  String   @db.VarChar(32)
  size       Int?
  type       Type     @default(FILE)
  Folder     Folder   @relation(fields: [folderId], references: [id])
  folderId   Int
}

enum Type {
  FOLDER
  FILE
}
